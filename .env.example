# Telegram Bot Configuration
# Получите токен от @BotFather в Telegram
TG_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# LLM Configuration (OpenRouter)
# Получите токен на https://openrouter.ai/
LLM_TOKEN=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Модель LLM для использования
# Примеры: "google/gemini-2.0-flash-exp:free", "openai/gpt-4o-mini", "anthropic/claude-3.5-sonnet"
MODEL=google/gemini-2.0-flash-exp:free

# Database Configuration
# Имя файла базы данных SQLite
DATABASE_NAME=users.db

# Имя таблицы в базе данных
TABLE_NAME=users

# Максимальное количество сообщений в контексте диалога
MAX_CONTEXT=20

# Debug Configuration
# Режим отладки (0 - выключен, 1 - включен)
DEBUG=0

# ID чата для отладочных сообщений (ваш личный chat_id)
# Получите свой chat_id через @userinfobot
DEBUG_CHAT=123456789

# Reminder Configuration
# Часы задержки перед отправкой напоминания
DELAYED_REMINDERS_HOURS=2

# Минуты задержки перед отправкой напоминания
DELAYED_REMINDERS_MINUTES=0

# Смещение часового пояса относительно UTC (например, +3 для MSK)
TIMEZONE_OFFSET=3

# Временное окно для отправки напоминаний
# Начало периода (час в 24-часовом формате)
FROM_TIME=9

# Конец периода (час в 24-часовом формате)
TO_TIME=23

# Admin Configuration
# Список ID администраторов через запятую (необязательно)
# Пример: ADMIN_LIST=123456789,987654321
ADMIN_LIST=
